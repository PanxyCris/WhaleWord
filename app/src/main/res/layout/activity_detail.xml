<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.silence.activity.DetailActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >


        <Button
            android:id="@+id/btn_unfamiliar"
            android:text="复习"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0sp"
            android:gravity="center"
            android:background="@drawable/btn_circle"
            android:textStyle="bold" android:textColor="@color/colorPrimary"
            />
        <RelativeLayout android:layout_width="230sp" android:layout_height="1dp"></RelativeLayout>

        <Button
            android:id="@+id/btn_handle"
            android:text="学词"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="0sp"
            android:gravity="center"
            android:background="@drawable/btn_circle"
            android:textStyle="bold" android:textColor="@color/colorPrimary"/>

        <!--<TextView-->
            <!--android:id="@+id/btn_unfamiliar"-->
            <!--style="@style/bottom_bar_style"-->
            <!--android:drawableTop="@drawable/btn_circle"-->
            <!--android:text="陌生"-->
            <!--/>-->


        <!--<TextView-->
            <!--android:id="@+id/btn_handle"-->
            <!--style="@style/bottom_bar_style"-->
            <!--android:drawableTop="@drawable/btn_circle_blue"-->
            <!--android:text="熟悉"-->
            <!--/>-->
    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@mipmap/bottom_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/btn_prev"
            style="@style/bottom_bar_style"
            android:drawableTop="@drawable/btn_previous_selector"
            android:text="@string/tv_back"
            />

        <TextView
            android:id="@+id/tv_play"
            style="@style/bottom_bar_style"
            android:drawableTop="@drawable/btn_play_selector"
            android:text="@string/tv_play"
            />

        <TextView
            android:id="@+id/btn_next"
            style="@style/bottom_bar_style"
            android:drawableTop="@drawable/btn_next_selector"
            android:text="@string/tv_next"
            />
    </LinearLayout>
</LinearLayout>

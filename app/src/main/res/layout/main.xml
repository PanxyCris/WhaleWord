<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@android:color/holo_blue_light"

             tools:context="com.silence.activity.CountActivity"
>


    <TableRow
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:text="GRE必备高频词"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="32sp"
                android:textStyle="bold"/>

    </TableRow>

    <TableRow
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:text="今日已完成"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold"/>

    </TableRow>

    <TableRow
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:id="@+id/today_count"

                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="100sp"
                android:textStyle="bold" android:textColor="@android:color/white"/>

    </TableRow>
    <TableRow

            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView

                android:text="累计学词"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="20sp"
                android:textStyle="bold" android:textColor="@android:color/white"/>

        <TextView

                android:text="打卡天数"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="20sp"
                android:textStyle="bold" android:textColor="@android:color/white"/>

    </TableRow>

    <TableRow
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:id="@+id/word_count"
                android:text="累计学词16"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="20sp"
                android:textStyle="bold" android:textColor="@android:color/white"/>

        <TextView
                android:id="@+id/day_count"
                android:text="打卡天数"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="20sp"
                android:textStyle="bold" android:textColor="@android:color/white"/>

    </TableRow>


    <TableRow
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView

                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="35sp"
                android:textStyle="bold" android:textColor="@android:color/white"/>


        <TextView

                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="35sp"
                android:textStyle="bold" android:textColor="@android:color/white"/>

    </TableRow>


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools" android:layout_width="411dp"
                 android:layout_height="match_parent"
                 android:background="@android:color/white"
                 android:padding="5dp"
                 android:layoutDirection="locale"
    >
        <TableRow
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView
                    android:id="@+id/plan"
                    android:text="预计 分钟"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textSize="20sp"
                    android:textStyle="bold" android:textColor="@android:color/darker_gray"/>


        </TableRow>
        <RelativeLayout android:layout_height="1dp"></RelativeLayout>
        <TableRow>

            <!--            <LinearLayout android:layout_height="40">-->
            <Button
                    android:id="@+id/btnGetMp3s"
                    android:text="复习"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/btn_circle"

                    android:layout_marginLeft="60dp"
                    android:textStyle="bold" android:textColor="@color/colorPrimary"
            />
            <RelativeLayout android:layout_width="100sp" android:layout_height="1dp"
                            android:layout_marginTop="5dp"></RelativeLayout>

            <Button
                    android:id="@+id/btnExitSys"
                    android:text="学词"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/btn_circle_blue"

                    android:textStyle="bold" android:textColor="@android:color/white"/>


        </TableRow>


        <TableRow
                android:gravity="center"
                android:layout_width="match_parent" android:layout_height="match_parent"/>
    </TableLayout>
</TableLayout>
<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@android:color/holo_blue_light"
             android:padding="5dp"
>


    <TableRow
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:text="GRE必备高频词"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="32sp"
                android:textStyle="bold"/>

    </TableRow>

    <TableRow
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:text="今日已完成"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold"/>

    </TableRow>

    <TableRow
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:text="4"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="100sp"
                android:textStyle="bold" android:textColor="@android:color/white"/>

    </TableRow>


    <TableRow
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:text="累计学词"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="20sp"
                android:textStyle="bold" android:textColor="@android:color/white"/>

        <TextView
                android:text="打卡天数"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="20sp"
                android:textStyle="bold" android:textColor="@android:color/white"/>

    </TableRow>


    <TableRow
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:text="2200"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="35sp"
                android:textStyle="bold" android:textColor="@android:color/white"/>


        <TextView
                android:text="300"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="35sp"
                android:textStyle="bold" android:textColor="@android:color/white"/>

    </TableRow>


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@android:color/white"
                 android:padding="60dp"
    >
        <TableRow
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView
                    android:text="预计 分钟"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textSize="20sp"
                    android:textStyle="bold" android:textColor="@android:color/darker_gray"/>
            <RelativeLayout android:layout_height="1dp"></RelativeLayout>


        </TableRow>

        <TableRow>

<!--            <LinearLayout android:layout_height="40">-->
            <Button
                    android:id="@+id/btnGetMp3s"
                    android:text="复习"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/btn_circle"
                    android:textStyle="bold" android:textColor="@color/colorPrimary"
            />
                <RelativeLayout android:layout_width="60sp" android:layout_height="1dp"></RelativeLayout>

            <Button
                    android:id="@+id/btnExitSys"
                    android:text="学词"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"


                    android:background="@drawable/btn_circle_blue"

                    android:textStyle="bold" android:textColor="@android:color/white"/>


        </TableRow>


        <TableRow
                android:gravity="center"
                android:layout_width="match_parent" android:layout_height="match_parent"/>
    </TableLayout>
</TableLayout>